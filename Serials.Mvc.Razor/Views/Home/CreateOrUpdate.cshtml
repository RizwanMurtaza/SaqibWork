@using Serials.Core
@using InputType = Serials.Core.InputType;
@model SerialViewModel

<form class="form-horizontal" method="post" asp-area="" asp-controller="Home" asp-action="@ViewContext.RouteData.Values["action"].ToString()">
    <div class="row">
        <div class="col-6 form-group">
            <label asp-for="SerialNumber"></label>
            <input class="form-control" asp-for="SerialNumber" readonly />
            <span asp-validation-for="SerialNumber" class="text-danger"></span>
        </div>
        <div class="col-6 form-group">
            <label asp-for="Email"></label>
            <input class="form-control" asp-for="Email" />
        </div>
    </div>
    
    <div class="row">
        <div class="col-6 form-group">
            <label asp-for="Firstname"></label>
            <input class="form-control" asp-for="Firstname" />

        </div>
        <div class="col-6 form-group">
            <label asp-for="Lastname"></label>
            <input class="form-control" asp-for="Lastname" />
        </div>
    </div>

    <div class="row">
        <div class="col-6 form-group @(@Model.InputType == InputType.Create? "d-none" : "")">
            <label asp-for="ActivationDate"></label>
            <input class="form-control" asp-for="ActivationDate" />
        </div>
        <div class="col-6 form-group">
            <label asp-for="SoftwareList"></label>
            @*<select class="form-control dropdown" asp-for="Software" asp-items="Html.GetEnumSelectList<SoftwareEnum>()" ></select>*@
            <select class="form-control dropdown" asp-for="SoftwareSelected" asp-items="@Model.SoftwareList"></select>
        </div>
    </div>
    
    <div class="form-group">
        <label asp-for="Info"></label>
        <input class="form-control" asp-for="Info" />
    </div>
    
    <div class="row">
        <div class="col-6">
            <button class="btn btn-dark float-right" onclick="location.href='@Url.Action("Index")'" type="reset">Cancel</button>
        </div>
        <div class="col-1">
            <button class="btn btn-primary float-right" type="submit">Save</button>
        </div>
    </div>
</form>